{
  "name": "translateincode",
  "displayName": "TranslateInCode",
  "description": "Easy to translate text in vscode",
  "version": "0.0.2",
  "icon": "translation.png",
  "author": {
    "name": "MoXiaoluo",
    "email": "771595316@qq.com"
  },
  "publisher": "MoXiaoluo",
  "license": "MIT",
  "keywords": [
    "translate",
    "translation",
    "translateInCode"
  ],
  "repository": {
    "url": "https://github.com/MoXiaoluo/TransaleInCode.git"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "translateincode.translate",
        "title": "Translate"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "translateincode.translate",
          "group": "translation"
        }
      ]
    },
    "configuration":[
      {
        "title": "TranslateInCode",
        "properties": {
          "translateincode.SaveTranslation": {
            "type": "boolean",
            "default": false,
            "description": "save the translate result to local file"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.0",
    "ollama": "^0.5.9"
  }
}